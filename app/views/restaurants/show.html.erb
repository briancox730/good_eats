<table class="table table-striped">
  <tr>
    <td><%= @restaurant.name %></td>
    <td><%= @restaurant.address %></td>
    <td><%= @restaurant.city %></td>
    <td><%= @restaurant.state %></td>
    <td><%= @restaurant.zipcode %></td>
    <td><%= @restaurant.category.category %></td>
  </tr>
</table>

<p>
  <%= @restaurant.description %>
</p>

<%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %><br><br>

<table class="table table-hover">
  <th>Rating</th>
  <th>Review</th>
  <% @reviews.each do |r| %>
    <tr>
      <td><%= r.rating %></td>
      <td><%= r.body %></td>
    </tr>
  <% end %>
</table>
